{
  "manifest_version": 3,
  "name": "Quick Notes for Every Website",
  "version": "1.1",
  "description": "Create multiple sticky notes on any page, synced across devices, with themes and summariser.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "action": {
  "default_popup": "popup.html",
  "default_icon": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
