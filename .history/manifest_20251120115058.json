{
  "manifest_version": 3,
  "name": "Quick Notes for Every Website",
  "version": "1.0",
  "description": "Add quick sticky notes to any website. Notes auto-save per URL.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
